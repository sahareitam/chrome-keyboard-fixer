{
  "manifest_version": 3,
  "name": "chrome keyboard fixer",
  "version": "1.0",
  "description": "Fixes text typed with wrong keyboard layout",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://external-server-api.ew.r.appspot.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "convert_text": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Convert selected text"
    }
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [ "content.js" ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://external-server-api.ew.r.appspot.com"
  }
}